{
  "name": "buy-print-server",
  "version": "1.0.1",
  "description": "Servidor de impresion",
  "main": "index.js",
  "scripts": {
    "test": "electron .",
    "make": "electron-forge make",
    "build": "node build_installer.js --icon=logo.ico",
    "pack": "electron-packager . printserver --platform=win32 --arch=x64 --protocol=yubprint --protocol-name='yubprint' --icon=logo.ico "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-wix": "^6.2.1",
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0",
    "electron-packager": "^17.1.1",
    "electron-wix-msi": "^5.0.0"
  },
  "dependencies": {
    "electron-pdf-window": "^1.0.12",
    "electron-store": "^8.1.0",
    "fs": "^0.0.1-security",
    "html-pdf-node": "^1.0.7",
    "pdf-to-printer": "^5.6.0",
    "puppeteer": "^20.7.3"
  },
  "protocols": [
    {
      "name": "yubprint",
      "schemes": [
        "yubprint"
      ]
    }
  ],
  "config": {
    "forge": {
      "packagerConfig": {
        "protocols": [
          {
            "name": "Buy print server",
            "schemes": [
              "yubprint"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "language": 1033,
            "manufacturer": "yubprint",
            "mimeType": [
              "x-scheme-handler/yubprint"
            ],
            "options": {
              "icon": "logo.ico"
            }
          }
        }
      ]
    }
  }
}
